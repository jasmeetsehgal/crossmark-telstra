@{
    ViewBag.Title = "Customer Receives Bill";
}

<div class="sub-page  AlignH ">
    <style>
         figcaption {
            height: 640px;
        }
        .page-content h2 {
            color: #ED3B95;
            margin: 10px 0;
        }
         .page-content h2.p10{
            padding-left:10px;
        }
